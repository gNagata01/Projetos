#include<stdio.h>

int main (){
    int mat[5][5] = {{2,-54}, {4,6}, {-9,0}};
    int mat2[5][5], soma[5][5];
    int i, j;
    int linhas = 3, colunas = 2;

    for(i=0; i<linhas; i++){
        for(j=0;j<colunas;j++){
            printf("%3d", mat[i][j]);
        }
        printf("\n");
    }
    printf("\ndiite os elementos da matriz %d x %d\n", linhas, colunas);

    for(i=0;i<linhas;i++){
        for(j=0;j<colunas;j++){
            printf("elemento[%d][%d]: ", i+1,j+1);
            scanf("%d", &mat2[i][j]);
        }
    }
    for(i=0;i<linhas;i++){
        for(j=0;j<colunas;j++){
            printf("3%d ", mat2[i][j]);
        }
    }
return 0;

}
